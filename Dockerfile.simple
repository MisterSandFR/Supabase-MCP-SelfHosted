# Serveur HTTP ultra-simple pour Railway
FROM python:3.12-slim

# Variables d'environnement
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# Répertoire de travail
WORKDIR /app

# Copie du serveur ultra-simple
COPY ultra_simple_server.py .

# Exposition du port
EXPOSE 8000

# Point d'entrée - Démarrer le serveur HTTP ultra-simple
CMD ["python", "ultra_simple_server.py"]
