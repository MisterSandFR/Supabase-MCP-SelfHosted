# Apify-specific Dockerfile
FROM apify/actor-node:18

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev for TypeScript build)
RUN npm ci || npm install

# Copy source files
COPY . ./

# Build TypeScript
RUN npm run build

# Explicitly set the entry point for Apify
ENTRYPOINT ["node"]
CMD ["dist/main.js"]