{
  "title": "Supabase MCP Server Configuration",
  "type": "object",
  "schemaVersion": 1,
  "required": ["supabaseUrl", "supabaseAnonKey"],
  "properties": {
    "supabaseUrl": {
      "title": "Supabase URL",
      "type": "string",
      "description": "Your self-hosted Supabase instance URL",
      "editor": "textfield",
      "example": "https://your-project.supabase.co",
      "prefill": "https://your-project.supabase.co"
    },
    "supabaseAnonKey": {
      "title": "Anonymous Key",
      "type": "string",
      "description": "Supabase anonymous key (starts with eyJ...)",
      "editor": "textfield",
      "isSecret": true,
      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
    },
    "supabaseServiceRoleKey": {
      "title": "Service Role Key (Optional)",
      "type": "string",
      "description": "Service role key for privileged operations",
      "editor": "textfield",
      "isSecret": true,
      "nullable": true
    },
    "databaseUrl": {
      "title": "Database URL (Optional)",
      "type": "string",
      "description": "Direct PostgreSQL connection string for better reliability",
      "editor": "textfield",
      "isSecret": true,
      "example": "postgresql://postgres:password@localhost:5432/postgres",
      "nullable": true
    },
    "supabaseAuthJwtSecret": {
      "title": "JWT Secret (Optional)",
      "type": "string",
      "description": "JWT secret for token verification",
      "editor": "textfield",
      "isSecret": true,
      "nullable": true
    },
    "enableRateLimiting": {
      "title": "Enable Rate Limiting",
      "type": "boolean",
      "description": "Enable rate limiting (100 requests/minute)",
      "default": true
    },
    "maxConcurrentRequests": {
      "title": "Max Concurrent Requests",
      "type": "integer",
      "description": "Maximum number of concurrent requests",
      "default": 10,
      "minimum": 1,
      "maximum": 100
    }
  }
}