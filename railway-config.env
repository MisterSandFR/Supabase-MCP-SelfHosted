# Configuration Railway pour l'automatisation
# Ce fichier configure Railway pour le déploiement automatique

# Variables d'environnement Railway
RAILWAY_PROJECT_ID=""  # À configurer après création du projet
RAILWAY_SERVICE_NAME="supabase-mcp-server"
RAILWAY_DOMAIN="mcp.coupaul.fr"

# Configuration du déploiement
RAILWAY_DEPLOYMENT_TIMEOUT=300  # 5 minutes
RAILWAY_HEALTH_CHECK_TIMEOUT=60  # 1 minute

# Variables d'environnement à configurer dans Railway
ENVIRONMENT_VARIABLES=(
    "SUPABASE_URL=https://your-project.supabase.co"
    "SUPABASE_ANON_KEY=eyJ..."
    "SUPABASE_SERVICE_KEY=eyJ..."
    "PYTHONUNBUFFERED=1"
    "PYTHONDONTWRITEBYTECODE=1"
    "PYTHONPATH=/app"
)

# Configuration du monitoring
RAILWAY_MONITORING_ENABLED=true
RAILWAY_LOGS_ENABLED=true
RAILWAY_METRICS_ENABLED=true

# Configuration SSL
RAILWAY_SSL_ENABLED=true
RAILWAY_CUSTOM_DOMAIN_ENABLED=true
